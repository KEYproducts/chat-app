<div class="message">
  <div class="message-top">
    <div class="message__user">
      <%= message.user.name %>
    </div>
    <div class="message__date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="message-bottom">
    <div class="message__text">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message__image' if message.image.attached? %>
  </div>
</div>
