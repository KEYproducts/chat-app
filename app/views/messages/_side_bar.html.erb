<div class="side-bar-header">
  <div class="user-name">
    <%= link_to current_user.name, edit_user_path(current_user), method: :get %>
  </div>
  <div class="room-create">
    <%= link_to 'チャットを作成する', new_room_path, method: :get %>
  </div>
</div>

<div class="rooms-container">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <%= link_to room.name, room_messages_path(room), method: :get %>
    </div>
  <% end %>
</div>